page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.img-container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.img-container text {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 30px;
  color: #808080;
}

.btn-container {
  display: flex;
  justify-content: space-evenly;
  align-items: flex-end;
}

.btn {
  box-sizing: border-box;
  margin: 10rpx;
  padding: 20rpx 10rpx;
  background-color: #EFEFEF;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16px;
  font-size: 36rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #B6B6B6;
  border-radius: 16px;
}

.btn image{
  width: 50%;
  height: auto;
}

.about-us {
  /* transform: translateY(-20rpx); */
  color: #FFFFFF;
  background: #8366FC;
  box-shadow: 0px 8px 6px rgba(118, 59, 255, 0.3);
  opacity: 1;
}

.open {

  background: #FFFFFF;
  border: 4px solid #F4F5FB;
  box-shadow: 0px 4px 6px rgba(134, 83, 255, 0.3);
  opacity: 1;
  box-shadow: 0px 4px 6px rgba(207, 187, 255, 0.3);
}