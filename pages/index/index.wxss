page{
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-items: space-evenly;
}

.img-container{
  width: 500rpx;
  height: 500rpx;
  background-color: #EFEFEF;
  border-radius: 8px;
}

.btn-container{
  display: flex;
  justify-content: space-evenly;
}

.btn{
  margin: 10rpx;
  padding: 10rpx;
  background-color: #EFEFEF;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16px;

  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  color: #B6B6B6;
}

.btn-checked{
  width: 230rpx;
  height: 230rpx;
  background-color: #892CDC;
  box-shadow: 0px 8px 6px rgba(118, 59, 255, 0.3);
  color: #ffffff;
}