/* pages/enroll/enroll.wxss */

.enroll-container {
  padding: 20rpx 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.enroll-title {
  font-size: 20px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 34px;
  color: #1D1D1D;
}

.infos {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-start;
  margin: 20rpx;
  padding: 10rpx;
  width: 80%;
  height: 150rpx;
}

.infos>text {
  font-size: 18px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 34px;
  color: #B6B6B6;
}

.reason {
  height: 200rpx;
}

textarea {
  height: 100rpx;
  width: 600rpx;
  border-bottom: 1px #B4B4B4 solid;
  font-size: 18px;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #808080;
  overflow: hidden;
}

.inputs {
  width: 100%;
  border-bottom: 1px #B4B4B4 solid;
  font-size: 18px;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 24px;
  color: #808080;
}

.unfilled {
  width: 500rpx !important;
  height: 100rpx;
  background: #EFEFEF;
  border-radius: 16px;

  font-size: 18px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #B6B6B6;
  display: grid;
  place-content: center;

  margin: 100rpx 0;
}

.filled{
  background: #8566FF;
  color: #FFFFFF;
  width: 500rpx !important;
  height: 100rpx;
  border-radius: 16px;

  font-size: 18px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  display: grid;
  place-content: center;

  margin: 100rpx 0;
}