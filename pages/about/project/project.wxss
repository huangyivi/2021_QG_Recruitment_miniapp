
page {
  width: 100%;
  height: 100%;
}

.background {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.rtn-btn {
  position: absolute;

  top: 180rpx;
  left: 100rpx;
  width: 40rpx;
  height: 40rpx;
}

.title-bg {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: -1;
  left: 50%;
  top: 150rpx;
  transform: translateX(-50%);
}

.about-header {
  width: 100%;
  height: 400rpx;
  display: grid;
  place-content: center;
  color: #808080;
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
}

.about-intro {
  position: relative;
  top: -100rpx;
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 50rpx;


  font-size: 16px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 20px;
  color: #808080;
}


.list-item {
  box-sizing: border-box;
  padding: 0 50rpx;
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F4F5FB;

  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 20px;
  color: #808080;
}

.item-info{
  width: 80%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-info text{
  margin-left: 20rpx;
}


.about-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink:0
}