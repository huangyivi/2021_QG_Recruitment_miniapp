/* pages/about/details/details.wxss */
page {
  width: 100%;
  height: 100%;
}

.background {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.rtn-btn {
  position: absolute;
  top: 180rpx;
  left: 100rpx;
  width: 60rpx;
  height: 60rpx;
}

.title-bg {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: -1;
  left: 50%;
  top: 150rpx;
  transform: translateX(-50%);
}

.about-header {
  width: 100%;
  height: 400rpx;
  display: grid;
  place-content: center;
  color: #808080;
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
}


.detail-container{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-items: flex-start;
  align-items: center;
}

.detail-img{
  width: 80%;
}

.detail-name{
  margin-top: -50rpx;
  width: 90%;
  box-sizing: border-box;
  padding: 100rpx;
  font-size: 35rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  line-height: 34px;
  color: #808080;
  text-align: center;
}

.detail-intro{
  margin-top: -100rpx;
  box-sizing: border-box;
  padding: 100rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 20px;
  color: #808080;
  text-align: justify;
}