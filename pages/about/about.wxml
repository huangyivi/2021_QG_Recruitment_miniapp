<view class="about-container"  bindtouchstart="touchStart" bindtouchend="touchEnd">
  <view class="central-part">
    <view class="btn-pane" >
      <view class="to-home">
        <view class="home-icon" catchtap="toHome"></view>
      </view>
      <!-- <view class="to-enroll" catchtap="toEnroll">
        <view class="enroll-icon"></view>
        <view>我要报名</view>
      </view> -->
    </view>
    <view class="control-pane" wx:for="{{about}}" wx:for-item="item" wx:for-index="idx" wx:if="{{pageIndex == idx}}">
      <view class="pane-header">
        <image class="header-image" src="{{item.header}}">
        </image>
      </view>
      <view class="pane-content">
        <text
          decode="{{true}}">&emsp;&emsp;{{item.introduction}}</text>
        <view class="select-pane">
          <image data-page="0" catchtap="changePage" class="select-icon" src="{{item.btn[0]}}">
          </image>
          <image data-page="1" catchtap="changePage" class="select-icon" src="{{item.btn[1]}}">
          </image>
          <image data-page="2" catchtap="changePage" class="select-icon" src="{{item.btn[2]}}">
          </image>
          <image data-page="3" catchtap="changePage" class="select-icon" src="{{item.btn[3]}}">
          </image>
        </view>
      </view>

    </view>

    <!-- 各小组介绍 -->
    <view class="group-pane" wx:for="{{groups}}" wx:for-item="item" wx:for-index="idx" wx:if="{{groupIndex == idx}}">
      <view class="group-left">
        <view class="group-header">
          <image class="group-name" mode="widthFix" src="{{item.name}}">
          </image>
        </view>
        <text decode="{{true}}" class="group-info">
          &emsp;&emsp;{{item.introduction}}
        </text>
      </view>
      <view class="group-right">
        <image class="group-intro" mode="heightFix" src="../../static/images/right.png"></image>
      </view>
      <image class="group-logo" src="{{item.logo}}"></image>
      <view class="group-keywords">
        <view class="group-items">{{item.keywords[0]}}</view>
        <view class="group-items right">{{item.keywords[1]}}</view>
        <view class="group-items">{{item.keywords[2]}}</view>
      </view>
    </view>

    <view class="join-pane" wx:if="{{groupIndex == 7}}" >
      <image mode="widthFix" src="../../static/images/join/join.png"></image>
      <image mode="widthFix" class="join-btn" src="../../static/images/join/join_btn.png" catchtap="toEnroll"></image>
    </view>
  </view>

  <view class="scroll" wx:if="{{groupIndex != 7}}">
    <text>上滑查看其他小组介绍</text>
  </view>
  <view class="scroll" wx:if="{{groupIndex == 7}}">
    <text>上滑返回团队介绍</text>
  </view>
</view>