page {
  width: 100%;
  height: 100%;
}

.background {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.rtn-btn {
  position: absolute;
  top: 180rpx;
  left: 100rpx;
  width: 40rpx;
  height: 40rpx;
}

.title-bg {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: -1;
  left: 50%;
  top: 150rpx;
  transform: translateX(-50%);
}

.about-header {
  width: 100%;
  height: 400rpx;
  display: grid;
  place-content: center;
  color: #808080;
  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: 600;
}


.edu-container {
  box-sizing: border-box;
  padding: 20rpx 100rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 40rpx;
}

.edu-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edu-avatar {
  width: 200rpx;
  flex-shrink: 0;
}

.edu-info {
  display: flex;
  flex-direction: column;
}

.edu-name {

  font-size: 40rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  line-height: 34px;
  color: #6930C3;
}


.edu-pro {

  font-size: 35rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 20px;
  color: #808080;
}

.edu-box {
  margin-top: 40rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.edu-title {
  font-size: 35rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  line-height: 20px;
  color: #6930C3;
}

.edu-title::before {
  margin-right: 10rpx;
  content: "1";
  position: relative;
  width: 20rpx;
  height: 40rpx;
  left: 0;
  top: 0;
  background-color: #6930C3;
  color: #6930C3;
}

.edu-awards {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  line-height: 20px;
  color: #808080;
}

